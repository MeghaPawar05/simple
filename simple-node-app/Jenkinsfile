pipeline {
    agent any

    environment {
        IMAGE_NAME = "simple-node-app"
        DOCKER_HUB_USER = "yourdockusername"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/your/repo.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${IMAGE_NAME}:latest ."
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    sh "docker run -d -p 3000:3000 --name simple-node-app ${IMAGE_NAME}:latest"
                }
            }
        }

        stage('Push to Docker Hub') {
            when {
                expression { return false }
            }
            steps {
                script {
                    sh "docker tag ${IMAGE_NAME}:latest ${DOCKER_HUB_USER}/${IMAGE_NAME}:latest"
                    sh "docker push ${DOCKER_HUB_USER}/${IMAGE_NAME}:latest"
                }
            }
        }
    }

    post {
        always {
            sh "docker rm -f simple-node-app || true"
        }
    }
}